---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import Blog from '../components/Blog.astro';
import Hero from '../components/Hero.astro';
import ProjectLinks from '../components/ProjectLinks.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

---

<BaseLayout
	title="Mes projets | Célia Bonalair"
	description="Les projets de Célia Bonalair"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Mes projets"
				tagline="Articles analytiques, guides marketing et ressources éducatives"
				align="start"
			/>


			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<Blog project={project} />
						</li>
					))
					
				}
			</Grid>

			<div class="gallery">					
						
				<ul>
					<ProjectLinks>
				</ul>						
			
		</div>

		</main>
		<ContactCTA />
	</div>
</BaseLayout>
